			}
			self.m_listbox.Enable(event.GetInt() == 0)
			self.m_lbSelectThis.Enable(event.GetInt() == 0)
			self.m_lbSelectNum.Enable(event.GetInt() == 0)
			self.m_listboxSorted.Enable(event.GetInt() == 0)
			self.FindWindowById(ID_CHANGE_COLOUR).Enable(event.GetInt() == 0)
		} elsif (id == ID_LISTBOX_SEL_NUM) {
			if (self.m_listbox.GetCount() > 2) {
			    self.m_listbox.SetSelection(2)
			}
			if (self.m_listboxSorted.GetCount() > 2) {
			    self.m_listboxSorted.SetSelection(2)
			}
			self.m_lbSelectThis.WarpPointer(40, 14)
		} elsif (id == ID_LISTBOX_SEL_STR) {
			if (self.m_listbox.FindString('This') != wx.NOT_FOUND) {
				self.m_listbox.SetStringSelection('This')
			}
			if (self.m_listboxSorted.FindString('This') != wx.NOT_FOUND) {
				self.m_listboxSorted.SetStringSelection('This')
			}
			self.m_lbSelectNum.WarpPointer(40, 14)
		} elsif (id == ID_LISTBOX_CLEAR) {
			self.m_listbox.Clear()
			self.m_listboxSorted.Clear()
		} elsif (id == ID_LISTBOX_APPEND) {
			self.m_listbox.Append('Hi!')
			self.m_listboxSorted.Append('Hi!')
		} elsif (id == ID_LISTBOX_DELETE) {
			idx = self.m_listbox.GetSelection()
			if (idx != wx.NOT_FOUND) {
				self.m_listbox.Delete(idx)
			}
			idx = self.m_listboxSorted.GetSelection()
			if (idx != wx.NOT_FOUND) {
				self.m_listboxSorted.Delete(idx)
			}
		} elsif (id == ID_LISTBOX_FONT) {
			self.m_listbox.SetFont(wx.ITALIC_FONT)
