	EventTable() = {
		// event binding
		self.Bind(wx.EVT_IDLE) {|event| self.OnIdle(event) }
		self.Bind(wx.EVT_NOTEBOOK_PAGE_CHANGING, ID_BOOK) {|event| self.OnPageChanging(event) }
		self.Bind(wx.EVT_NOTEBOOK_PAGE_CHANGED, ID_BOOK) {|event| self.OnPageChanged(event) }
		self.Bind(wx.EVT_LISTBOX, ID_LISTBOX) {|event| self.OnListBox(event) }
		self.Bind(wx.EVT_LISTBOX, ID_LISTBOX_SORTED) {|event| self.OnListBox(event) }
		self.Bind(wx.EVT_LISTBOX_DCLICK, ID_LISTBOX) {|event| self.OnListBoxDoubleClick(event) }
		self.Bind(wx.EVT_BUTTON, ID_LISTBOX_SEL_NUM) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_LISTBOX_SEL_STR) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_LISTBOX_CLEAR) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_LISTBOX_APPEND) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_LISTBOX_DELETE) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_LISTBOX_FONT) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_CHECKBOX, ID_LISTBOX_ENABLE) {|event| self.OnListBoxButtons(event) }
		self.Bind(wx.EVT_CHOICE, ID_CHOICE) {|event| self.OnChoice(event) }
		self.Bind(wx.EVT_CHOICE, ID_CHOICE_SORTED) {|event| self.OnChoice(event) }
		self.Bind(wx.EVT_BUTTON, ID_CHOICE_SEL_NUM) {|event| self.OnChoiceButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_CHOICE_SEL_STR) {|event| self.OnChoiceButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_CHOICE_CLEAR) {|event| self.OnChoiceButtons(event) }
		self.Bind(wx.EVT_BUTTON, ID_CHOICE_APPEND) {|event| self.OnChoiceButtons(event) }
