	OnListBox(event:wx.CommandEvent) = {
		if (event.GetInt() == -1) {
			self.m_text.AppendText('ListBox has no selections anymore\n')
			return
		}
		listbox = if (event.GetId() == ID_LISTBOX) {self.m_listbox} else {self.m_listboxSorted}
		self.m_text.AppendText("ListBox event selection string is: '")
		self.m_text.AppendText(event.GetString())
		self.m_text.AppendText("'\n")
		// can't use GetStringSelection() with multiple selections, there could be
		// more than one of them
		if (!listbox.HasFlag(wx.LB_MULTIPLE)) {
			self.m_text.AppendText("ListBox control selection string is: '")
			self.m_text.AppendText(listbox.GetStringSelection())
			self.m_text.AppendText("'\n")
		}
		obj = event.GetClientObject()
		self.m_text.AppendText("ListBox event client data string is: '")
		if (obj) {
		    self.m_text.AppendText(obj.GetData())
		} else {
		    self.m_text.AppendText('none')
		}
		self.m_text.AppendText("'\n")
		self.m_text.AppendText("ListBox control client data string is: '")
		obj = listbox.GetClientObject(event.GetInt())
		if (obj) {
			self.m_text.AppendText(obj.GetData())
		} else {
			self.m_text.AppendText('none')
		}
		self.m_text.AppendText("'\n")
	}
