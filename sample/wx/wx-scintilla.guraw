	NewLineAndIndent() = {
		indentSize = this.GetLineIndentation(this.GetCurrentLine())
		this.CmdKeyExecute(wx.STC_CMD_NEWLINE)
		this.SetLineIndentation(this.GetCurrentLine(), indentSize)
		(indentSize > 0) && this.CmdKeyExecute(wx.STC_CMD_WORDRIGHT)
	}
