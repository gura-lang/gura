// -------------------------------------
// MyTextModel
// -------------------------------------

MyTextModel = class(wx.DataViewListModel) {
	__init__() = {
		self.m_list = dim(1000) {'Test'}
		self.m_bools = [false, true].round(1000):list
		self.m_colours = ['red', 'green'].round(1000):list
		self.m_progress = [int(range(1000)) / 10]
		self.m_dates = dim(1000) {wx.DateTime.Now()}
	}
	GetNumberOfRows() = 1000
	GetNumberOfCols() = 7
	// as reported by wxVariant
	GetColType(col:number) = {
		if (col == 6) {
			'datetime'
		} elsif (col == 5) {
			'long'
		} elsif (col == 3) {
			'bool'
		} else {
			'string'
		}
	}
	GetValue(col:number, row:number) = {
		if (col == 6) {
			variant = wx.Variant(self.m_dates[row])
		} elsif (col == 5) {
			variant = wx.Variant(self.m_progress[row])
		} elsif (col == 4) {
			variant = wx.Variant(self.m_colours[row])
		} elsif (col == 3) {
			variant = wx.Variant(self.m_bools[row])
		} elsif (col == 2) {
			variant = wx.Variant(self.m_list[row])
		} else {
			tmp = format('item(%d;%d)', row, col)
			variant = wx.Variant(tmp)
		}
		variant
	}
	SetValue(value:wx.Variant, col:number, row:number) = {
		if (col == 6) {
			self.m_dates[row] = value.GetDateTime()
		} elsif (col == 3) {
			self.m_bools[row] = value.GetBool()
		} elsif (col == 2) {
			self.m_list[row] = value.GetString()
		}
		true
	}
}

// -------------------------------------
// MyCustomRenderer
// -------------------------------------

MyCustomRenderer = class(wx.DataViewCustomRenderer) {
	__init__() = {|'string', wx.DATAVIEW_CELL_ACTIVATABLE|
		self.m_colour = 'black'
	}
	SetValue(value:wx.Variant) = {
		self.m_colour = value.GetString()
		true
	}
	Render(rect:wx.Rect, dc:wx.DC, state:number) = {
		dc.SetPen(wx.BLACK_PEN)
		if (self.m_colour == 'red') {
			dc.SetBrush(wx.RED_BRUSH)
		} elsif (self.m_colour == 'green') {
			dc.SetBrush(wx.GREEN_BRUSH)
		} else {
			dc.SetBrush(wx.BLACK_BRUSH)
		}
		dc.DrawRectangleRect(rect)
		true
	}
	GetSize() = {
		wx.Size(20, 8)
	}
	Activate(rect:wx.Rect, model:wx.DataViewListModel, col:number, row:number) = {
		false
	}
}

// -------------------------------------
// MyUnsortedTextModel
// -------------------------------------

MyUnsortedTextModel = class(wx.DataViewListModel) {
	__init__() = {
		self.m_list = [
			'This'
			'is'
			'an'
			'unsorted'
			'list'
			'of'
			'words.'
		]
		self.m_bitmap = wx.BitmapFromXPMData(resource.null_xpm)
	}
	GetNumberOfRows() = self.m_list.len()
	GetNumberOfCols() = 2
	GetColType(col:number) = 'string'
	GetValue(col:number, row:number) = {
		if (col == 0) {
			variant = wx.Variant(self.m_list[row])
			return(variant)
		}
		if ((col == 2) || (col == 3)) {
			variant = wx.Variant(self.m_bitmap)
			return(variant)
		}
		tmp = format('item(%d;%d)', row, col)
		variant = wx.Variant(tmp)
		variant
	}
	SetValue(variant:wx.Variant, col:number, row:number) = {
		if (col == 0) {
			self.m_list[row] = variant.GetString()
			return(true)
		}
		false
	}
	AppendRow(text:string) = {
		self.m_list.add(text)
		self.RowAppended()
	}
	PrependRow(text:string) = {
		self.m_list.insert(0, text)
		self.RowPrepended()
	}
	InsertRowAt1(text:string) = {
		self.m_list.insert(1, text)
		self.RowInserted(1)
	}
	DeleteRow(index:number) = {
		self.m_list.erase(index)
		self.RowDeleted(index)
	}
}

