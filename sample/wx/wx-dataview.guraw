DYNAMIC_QUIT =  wx.ID_EXIT
DYNAMIC_ABOUT = wx.ID_ABOUT

MyApp = class(wx.App) {
	OnInit() = {
		frame = MyFrame(nil, 'wxDataViewCtrl feature test', 10, 10, 800, 340)
		frame.Show(true)
		frame2 = MySortingFrame(nil, 'wxDataViewCtrl sorting test', 10, 150, 600, 500)
		frame2.Show(true)
