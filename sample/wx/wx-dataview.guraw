	}
}

// -------------------------------------
// MyFrame
// -------------------------------------

MyFrame = class(wx.Frame) {
	__init__(frame:wx.Frame:nil, title:string, x:number, y:number, w:number, h:number) = \
			{|frame, wx.ID_ANY, title, wx.Point(x, y), wx.Size(w, h)|
		self.SetIcon(wx.IconFromXPMData(resource.sample_xpm))
		file_menu = wx.Menu()
		file_menu.Append(DYNAMIC_ABOUT, '&About')
		file_menu.Append(DYNAMIC_QUIT, 'E&xit')
		menu_bar = wx.MenuBar()
		menu_bar.Append(file_menu, '&File')
		self.SetMenuBar(menu_bar)
		// You used to have to do some casting for param 4, but now there are type-safe handlers
		self.Bind(wx.EVT_MENU, DYNAMIC_QUIT) {|event| self.OnQuit(event) }
		self.Bind(wx.EVT_MENU, DYNAMIC_ABOUT) {|event| self.OnAbout(event) }
		self.CreateStatusBar()
		panel = wx.Panel(self, wx.ID_ANY)
		// Left wxDataViewCtrl
		self.dataview_left = wx.DataViewCtrl(panel, wx.ID_ANY)
		model = MyTextModel()
		self.dataview_left.AssociateModel(model)
		self.dataview_left.AppendTextColumn('first', 0)
		self.dataview_left.AppendTextColumn('second', 1)
		text_renderer = wx.DataViewTextRenderer('string', wx.DATAVIEW_CELL_EDITABLE)
		column = wx.DataViewColumn('editable', text_renderer, 2)
		self.dataview_left.AppendColumn(column)
		self.dataview_left.AppendToggleColumn('fourth', 3)
		custom_renderer = MyCustomRenderer()
		column = wx.DataViewColumn('custom', custom_renderer, 4)
		self.dataview_left.AppendColumn(column)
		self.dataview_left.AppendProgressColumn('progress', 5)
		self.dataview_left.AppendDateColumn('date', 6)
		// Right wxDataViewCtrl using the same model
		self.dataview_right = wx.DataViewCtrl(panel, wx.ID_ANY)
		self.dataview_right.AssociateModel(model)
		text_renderer = wx.DataViewTextRenderer('string', wx.DATAVIEW_CELL_EDITABLE)
		column = wx.DataViewColumn('editable', text_renderer, 2)
		self.dataview_right.AppendColumn(column)
		self.dataview_right.AppendTextColumn('first', 0)
		self.dataview_right.AppendTextColumn('second', 1)
		toggle_renderer = wx.DataViewToggleRenderer('bool', wx.DATAVIEW_CELL_ACTIVATABLE)
		column = wx.DataViewColumn('bool', toggle_renderer, 3, 30)
		self.dataview_right.AppendColumn(column)
		self.dataview_right.AppendDateColumn('date', 6)
		// layout dataview controls.
		sizer = wx.BoxSizer(wx.HORIZONTAL)
		sizer.Add(self.dataview_left, wx.SizerFlags(3).Expand())
		sizer.AddSpacer(10, 10)
		sizer.Add(self.dataview_right, wx.SizerFlags(2).Expand())
		panel.SetSizer(sizer)
	}
	OnQuit(event:wx.CommandEvent) = {
		self.Close(true)
	}
	OnAbout(event:wx.CommandEvent) = {
		dialog = wx.MessageDialog(self, 'This demonstrates the dataview control handling',
				'About DataView', wx.OK)
		dialog.ShowModal()
	}
}

// -------------------------------------
// MySortingFrame
// -------------------------------------

[
ID_APPEND_ROW_LEFT,
ID_PREPEND_ROW_LEFT,
ID_INSERT_ROW_LEFT,
ID_DELETE_ROW_LEFT,
ID_EDIT_ROW_LEFT,
ID_SELECT,
ID_UNSELECT_ALL,
ID_APPEND_ROW_RIGHT,
ID_PREPEND_ROW_RIGHT,
ID_INSERT_ROW_RIGHT,
ID_DELETE_ROW_RIGHT,
ID_EDIT_ROW_RIGHT,
ID_SORTED,
ID_UNSORTED,
ID_ACTIVATED
] = 1000..

MySortingFrame = class(wx.Frame) {
	__init__(frame:wx.Frame:nil, title:string, x:number, y:number, w:number, h:number) = \
					{|frame, wx.ID_ANY, title, wx.Point(x, y), wx.Size(w, h)|
		self.EventTable()
		self.m_logOld = nil
		self.SetIcon(wx.IconFromXPMData(resource.sample_xpm))
		file_menu = wx.Menu()
		file_menu.Append(DYNAMIC_ABOUT, '&About')
		file_menu.Append(DYNAMIC_QUIT, 'E&xit')
		menu_bar = wx.MenuBar()
		menu_bar.Append(file_menu, '&File')
		self.SetMenuBar(menu_bar)
		// You used to have to do some casting for param 4, but now there are type-safe handlers
		self.Bind(wx.EVT_MENU, DYNAMIC_QUIT) {|event| self.OnQuit(event) }
		self.Bind(wx.EVT_MENU, DYNAMIC_ABOUT) {|event| self.OnAbout(event) }
		self.CreateStatusBar()
		// Left wxDataViewCtrl
		self.dataview_left = wx.DataViewCtrl(self, ID_UNSORTED, wx.DefaultPosition, wx.DefaultSize, wx.DV_MULTIPLE)
		self.m_unsorted_model = MyUnsortedTextModel()
		self.dataview_left.AssociateModel(self.m_unsorted_model)
		text_renderer = wx.DataViewTextRenderer('string', wx.DATAVIEW_CELL_EDITABLE)
		column = wx.DataViewColumn('editable', text_renderer, 0)
		self.dataview_left.AppendColumn(column)
		self.dataview_left.AppendTextColumn('second', 1)
		self.dataview_left.AppendColumn(wx.DataViewColumn(wx.BitmapFromXPMData(resource.null_xpm), wx.DataViewBitmapRenderer(), 2, 25))
		self.dataview_left.AppendColumn(wx.DataViewColumn('icon', wx.DataViewBitmapRenderer(), 3, 25))
		// Right wxDataViewCtrl using the sorting model
		self.dataview_right = wx.DataViewCtrl(self, ID_SORTED)
		self.m_sorted_model = wx.DataViewSortedListModel(self.m_unsorted_model)
		self.dataview_right.AssociateModel(self.m_sorted_model)
		text_renderer = wx.DataViewTextRenderer('string', wx.DATAVIEW_CELL_EDITABLE)
		column = wx.DataViewColumn('editable', text_renderer, 0, -1, wx.DATAVIEW_COL_SORTABLE | wx.DATAVIEW_COL_RESIZABLE)
		self.dataview_right.AppendColumn(column)
		self.dataview_right.AppendTextColumn('second', 1)
		// layout dataview controls.
		top_sizer = wx.BoxSizer(wx.HORIZONTAL)
		top_sizer.Add(self.dataview_left, wx.SizerFlags(1).Expand())
		top_sizer.AddSpacer(10, 10)
		top_sizer.Add(self.dataview_right, wx.SizerFlags(1).Expand())
		button_sizer = wx.BoxSizer(wx.HORIZONTAL)
		button_sizer.AddSpacer(10, 10, 1)
		left_sizer = wx.FlexGridSizer(nil, 2, 0, 0)
		left_sizer.Add(wx.Button(self, ID_APPEND_ROW_LEFT, 'Append' ), wx.SizerFlags(0).Border(wx.ALL, 5))
		left_sizer.Add(wx.Button(self, ID_PREPEND_ROW_LEFT, 'Prepend'), wx.SizerFlags(0).Border(wx.ALL, 5))
		left_sizer.Add(wx.Button(self, ID_INSERT_ROW_LEFT, 'Insert'), wx.SizerFlags(0).Border(wx.ALL, 5))
		left_sizer.Add(wx.Button(self, ID_DELETE_ROW_LEFT, 'Delete second'), wx.SizerFlags(0).Border(wx.ALL, 5))
		left_sizer.Add(wx.Button(self, ID_EDIT_ROW_LEFT, 'Edit'), wx.SizerFlags(0).Border(wx.ALL, 5))
		left_sizer.AddSpacer(5, 5)
		left_sizer.Add(wx.Button(self, ID_SELECT, 'Select third' ), wx.SizerFlags(0).Border(wx.ALL, 5))
		left_sizer.Add(wx.Button(self, ID_UNSELECT_ALL, 'Unselect all' ), wx.SizerFlags(0).Border(wx.ALL, 5))
		button_sizer.Add(left_sizer)
		button_sizer.AddSpacer(10, 10, 2)
		right_sizer = wx.FlexGridSizer(nil, 2, 0, 0)
		right_sizer.Add(wx.Button(self, ID_APPEND_ROW_RIGHT, 'Append'), wx.SizerFlags(0).Border(wx.ALL, 5))
		right_sizer.Add(wx.Button(self, ID_PREPEND_ROW_RIGHT, 'Prepend'), wx.SizerFlags(0).Border(wx.ALL, 5))
		right_sizer.Add(wx.Button(self, ID_INSERT_ROW_RIGHT, 'Insert'), wx.SizerFlags(0).Border(wx.ALL, 5))
		right_sizer.Add(wx.Button(self, ID_DELETE_ROW_RIGHT, 'Delete second'), wx.SizerFlags(0).Border(wx.ALL, 5))
		right_sizer.Add(wx.Button(self, ID_EDIT_ROW_RIGHT, 'Edit'), wx.SizerFlags(0).Border(wx.ALL, 5))
		button_sizer.Add(right_sizer)
		button_sizer.AddSpacer(10, 10, 1)
		main_sizer = wx.BoxSizer(wx.VERTICAL)
		main_sizer.Add(top_sizer, wx.SizerFlags(1).Expand())
		main_sizer.Add(button_sizer, wx.SizerFlags(0).Expand())
		self.m_logWindow = wx.TextCtrl(self, wx.ID_ANY, wx.EmptyString,
									wx.DefaultPosition, wx.DefaultSize,
									wx.TE_MULTILINE | wx.SUNKEN_BORDER)
		main_sizer.AddSpacer(20, 20)
		main_sizer.Add(self.m_logWindow, wx.SizerFlags(1).Expand())
		self.m_logOld = wx.Log.SetActiveTarget(wx.LogTextCtrl(self.m_logWindow))
		self.SetSizer(main_sizer)
	}
	EventTable() = {
		self.Bind(wx.EVT_BUTTON, ID_APPEND_ROW_LEFT) {|event| self.OnAppendRowLeft(event) }
		self.Bind(wx.EVT_BUTTON, ID_PREPEND_ROW_LEFT) {|event| self.OnPrependRowLeft(event) }
		self.Bind(wx.EVT_BUTTON, ID_INSERT_ROW_LEFT) {|event| self.OnInsertRowLeft(event) }
		self.Bind(wx.EVT_BUTTON, ID_DELETE_ROW_LEFT) {|event| self.OnDeleteRowLeft(event) }
		self.Bind(wx.EVT_BUTTON, ID_SELECT) {|event| self.OnSelect(event) }
		self.Bind(wx.EVT_BUTTON, ID_UNSELECT_ALL) {|event| self.OnUnselectAll(event) }
		self.Bind(wx.EVT_DATAVIEW_ROW_SELECTED, ID_SORTED) {|event| self.OnSelectedSorted(event) }
		self.Bind(wx.EVT_DATAVIEW_ROW_SELECTED, ID_UNSORTED) {|event| self.OnSelectedUnsorted(event) }
		self.Bind(wx.EVT_DATAVIEW_ROW_ACTIVATED, ID_UNSORTED) {|event| self.OnActivatedUnsorted(event) }
		self.Bind(wx.EVT_DATAVIEW_COLUMN_HEADER_CLICK, ID_SORTED) {|event| self.OnHeaderClickSorted(event) }
		self.Bind(wx.EVT_DATAVIEW_COLUMN_HEADER_CLICK, ID_UNSORTED) {|event| self.OnHeaderClickUnsorted(event) }
	}
	OnSelectedUnsorted(event:wx.DataViewEvent) = {
		row = event.GetRow()
		wx.LogMessage('OnSelected from unsorted list, selected %d', row )
		if (row >= 0) {
			wx.LogMessage('wxDataViewCtrl::IsSelected( %d ): %d (as int)', 
						row, self.dataview_right.IsSelected(row))
		}
	}
	OnSelectedSorted(event:wx.DataViewEvent) = {
		wx.LogMessage('OnSelected from sorted list, selected %d', event.GetRow())
	}
	OnActivatedUnsorted(event:wx.DataViewEvent) = {
		wx.LogMessage('OnActivated from unsorted list, activated %d', event.GetRow())
	}
	OnHeaderClickSorted(event:wx.DataViewEvent) = {
		col = event.GetDataViewColumn()
		wx.LogMessage('OnHeaderClick from sorted list, column %s', col.GetTitle())
		if (col.GetTitle() == 'editable') {
			// this is the sorting column
			if (col.IsSortOrderAscending()) {
				col.SetSortOrder(false)
				self.m_sorted_model.SetAscending(false)
				self.m_sorted_model.Resort()
			} else {
				col.SetSortOrder(true)
				self.m_sorted_model.SetAscending(true)
				self.m_sorted_model.Resort()
			}
		}
	}
	OnHeaderClickUnsorted(event:wx.DataViewEvent) = {
		wx.LogMessage('OnHeaderClick from unsorted list, column %s', event.GetDataViewColumn().GetTitle())
	}
	OnQuit(event:wx.CommandEvent) = {
		self.Close(true)
	}
	OnAbout(event:wx.CommandEvent) = {
		dialog = wx.MessageDialog(self, 'This demonstrates the dataview control sorting',
				'About DataView', wx.OK)
		dialog.ShowModal()
	}
	OnSelect(event:wx.CommandEvent) = {
		self.dataview_left.SetSelection(2)
	}
	OnUnselectAll(event:wx.CommandEvent) = {
		self.dataview_left.ClearSelection()
	}
	OnAppendRowLeft(event:wx.CommandEvent) = {
		dialog = wx.TextEntryDialog(self, 'Enter text to append')
		if (dialog.ShowModal() == wx.ID_OK) {
			value = dialog.GetValue()
			if (!value.isempty()) {
				self.m_unsorted_model.AppendRow(value)
			}
		}
	}
	OnPrependRowLeft(event:wx.CommandEvent) = {
		dialog = wx.TextEntryDialog(self, 'Enter text to prepend')
		if (dialog.ShowModal() == wx.ID_OK) {
			value = dialog.GetValue()
			if (!value.isempty()) {
				self.m_unsorted_model.PrependRow(value)
			}
		}
	}
	OnInsertRowLeft(event:wx.CommandEvent) = {
		dialog = wx.TextEntryDialog(self, 'Enter text to insert before second')
		if (dialog.ShowModal() == wx.ID_OK) {
			value = dialog.GetValue()
			if (!value.isempty()) {
				self.m_unsorted_model.InsertRowAt1(value)
			}
		}
	}
	OnDeleteRowLeft(event:wx.CommandEvent) = {
		self.m_unsorted_model.DeleteRow(1)
	}
	OnEditRowLeft(event:wx.CommandEvent) = {
	}
	OnAppendRowRight(event:wx.CommandEvent) = {
	}
	OnPrependRowRight(event:wx.CommandEvent) = {
	}
	OnInsertRowRight(event:wx.CommandEvent) = {
	}
	OnDeleteRowRight(event:wx.CommandEvent) = {
	}
	OnEditRowRight(event:wx.CommandEvent) = {
	}
}

wx.IMPLEMENT_APP(MyApp)
