import(tk)
import(freetype)
import(zip)

I(filename:string) = path.join(sys.datadir, 'sample', 'resource', filename)

img = image(`rgb, 160, 120, `black)

face = freetype.New_Face(I('zippedfont.zip/Kaufmann_Bold_BT.ttf')).setheight(32).setcolor(`white)
