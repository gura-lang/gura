#!/usr/bin/env gura
import(wx.show)
import(freetype)
import(zip)

I(filename:string) = path.join(sys.datadir, 'sample', 'resource', filename)

img = image(`rgb, 160, 120, `black)

freetype.font(I('zippedfont.zip/Kaufmann_Bold_BT.ttf')) {|font|
	font.height = 32
	font.color = `white
	img.drawtext(font, 0, font.height, 'Hello world')
}
freetype.font(I('Kaufmann_Bold_BT.ttf')) {|font|
	font.height = 32
	font.color = `white
	img.drawtext(font, 0, font.height * 2, 'Hello world')
}
img.show()
