# encoding: utf-8
import(tk)
import(freetype)

scope {
	[wdImage, htImage] = [640, 640]
	img = image(`rgb, wdImage, htImage, `white)
	face = freetype.face(freetype.sysfontpath('msgothic.ttc'), 1).setheight(32).setcolor(`black)
	face.setslant(.3)
	interval(0, 360, 16):open_r {|degree|
		face.setrotate(degree)
		img.drawtext(face, wdImage / 2, htImage / 2, "あいうえお Hello world")
	}
	img.show()
}
