#!/usr/bin/env gura
# encoding: utf-8
import(tk)
import(freetype)

scope {
	[wdImage, htImage] = [640, 640]
	img = image(`rgb, wdImage, htImage, `white)
	ctx = freetype.Context(freetype.sysfontpath('msgothic.ttc'), 1)
	ctx.setheight(32).setcolor(`black)
	ctx.setslant(.3)
	interval(0, 360, 16):open_r {|degree|
		ctx.setrotate(degree)
		img.drawtext(ctx, wdImage / 2, htImage / 2, "あいうえお Hello world")
	}
	img.show()
}
