#!/usr/bin/env gura
import(plotter)

plotter.canvas(`horz, 2) {|cv|
	xs = [10, -10, -10, 10]
	ys = [10, 10, -10, -10]
	cv.graph {|g|
		g.title = 'No adjustment'
		g.marker(xs, ys)
	}
	cv.graph {|g|
		g.title = 'adjustRange()'
		g.marker(xs, ys)
		g.adjustRange()
	}
	cv.graph {|g|
		g.title = 'adjustRange(20)'
		g.marker(xs, ys)
		g.adjustRange(20)
	}
	cv.graph {|g|
		g.title = 'adjustRange(20, 30)'
		g.marker(xs, ys)
		g.adjustRange(20, 30)
	}
	cv.show()
}
