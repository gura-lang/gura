#!/usr/bin/env gura
import(midi)

mml = [
't72'
//-----------------------------------------------------------------------------
'@{koto} v100 aab2 aab2 ab~cb ab8a8f2 ecef' \
'ee8c8_b2 ab~cb ab8a8f2 ecef ee8c8_b2' \
'aab2 aab2 ref2 b8a8fe2'
//-----------------------------------------------------------------------------
'@{koto} v80 l8 r2r~e~cb r2r~e~cb rererere rererbaferr4r2' \
'r2r~e~f~e rererere rererbaf err4r2 r2r~e~f~e' \
'r2r~e~cb r2r~e~cb r4refege f4a4b2'
//-----------------------------------------------------------------------------
'@{koto} l2 _ae _ae _aa f_b _ae' \
'_ae _aa f_b _ae _ae' \
'_ae _ae f_a _be'
]

midi.content {|content|
	content.mml(mml*)
	content.track(0) {|track|
		track.seek(0)
		track.text_event('sakura')
	}
	content.write('sakura.mid')
}
