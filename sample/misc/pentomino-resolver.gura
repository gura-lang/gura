#!/usr/bin/env gura

scope {
	Coord = struct(x:number, y:number) {
		__str__() = format('(%d,%d)', self.x, self.y)
	}
	Piece = class {
		__init__(id:number, patterns[]) = {
			self.id = id
			self.patterns = for (pattern in patterns):list { Coord * pattern }
			self.resetPattern()
		}
		print():void = println(self.patterns):nomap
		resetPattern():void = {
			self.iterPattern = self.patterns.each()
			self.patternCur = self.iterPattern.next()
		}
		getPattern() = self.patternCur
		nextPattern() = {
			self.patternCur = self.iterPattern.next()
			self.patternCur.istype(`list)
		}
	}
	Board = class {
		__init__() = {
			self.cells = repeat(8 * 8):list {nil}
		}
		getCell(x:number, y:number):map = {
			if (0 <= x && x < 8 && 0 <= y && y < 8) {
				self.cells[x + y * 8]
			} else {
				-1
			}
		}
		putCell(x:number, y:number, id:number):map:void = {
			if (0 <= x && x < 8 && 0 <= y && y < 8) {
				self.cells[x + y * 8] = id
			}
		}
		nextEmpty(iCell:number) = {
			(!self.cells.offset(iCell)).find() + iCell
		}
		print():void = {
			str = '+' + '--+' * 8
			println(str)
			repeat (8) {|y|
				cells = self.getCell(0..7, y)
				bordersX = (cells != self.getCell(1..8, y))
				bordersY = (cells != self.getCell(0..7, y + 1))
				str = '|' + cond(bordersX,
							cond(cells, '  |', '..|'),
							cond(cells, '   ', '...')).join()
				println(str)
				str = '+' + cond(bordersY, '--+',
							cond(cells, '  +', '..+')).join()
				println(str)
			}
		}
		isPlacable(piece:Piece, x:number, y:number) = {
			pattern = piece.getPattern()
			!self.getCell(x + pattern:*x, y + pattern:*y).or()
		}
		place(piece:Piece, x:number, y:number):void = {
			pattern = piece.getPattern()
			self.putCell(x + pattern:*x, y + pattern:*y, piece.id)
		}
		remove(piece:Piece):void = {
			self.cells = self.cells.replace(piece.id, nil):list
		}
	}
	piecesOrg = [
