// App
//-----------------------------------------------------------------------------
App = class(wx.App) {
	OnInit() = {
		if (true) {
			frame = Frame('Gura Shot')
			frame.Show()
			true
		} else {
			ImageListDialog(nil, []).ShowModal()
			false
		}
	}
	OnExit() = {
		SaveConfig()
		0
	}
}

wx.IMPLEMENT_APP(App)
