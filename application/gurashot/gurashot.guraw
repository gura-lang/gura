			imgInfo.center		= dict['center'].tonumber()
			imgInfo.top			= dict['top'].tonumber()
			imgInfo.bottom		= dict['bottom'].tonumber()
			imgInfos.add(imgInfo)
		} catch {}
	}
	imgInfoCur:public = if (imgInfos.isempty()) {
		ImageInfo()
	} else {
		imgInfos.last()
