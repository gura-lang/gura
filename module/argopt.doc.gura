#!/usr/bin/env gura
import(markdown)
import(argopt)

text@en = R'''
# argopt Module

## Overview

The `argopt` module provides measure to parse option strings in an argument list
given through the command line.

Below is an example:

    import(argopt)

    argopt.Parser {|p|
        p.addParam('text', 't')
        p.addFlag('test')
        p.addFlag('bold', 'b')
        try {
            [cfg, argv] = p.parse(sys.argv)
        } catch {|e|
            println(e.text)
            sys.exit(1)
        }
    }
    // The value of cfg['text'] is 'foo' when '--text=foo' is specified.
    // The value of cfg['test'] is true when '--test' is specified.

## argopt.Parser Class

### Constructor

${markdown.makedoc@function(`en
argopt.Parser
)}

### Method

${markdown.makedoc@function(`en
argopt.Parser.parse
argopt.Parser.addParam
argopt.Parser.addFlag
argopt.Parser.formatHelp
)}

'''.embed()

markdown.makedoc@module(locals(), %{`en => text@en})
