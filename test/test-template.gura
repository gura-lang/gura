testcase {
	var = 'HOGE'
	tester(`'hello ${var} world'.template())
	tester(`'hello ${var * 2} world'.template())
	tester(`'''hello '${format('%8s', var)}' world'''.template())
	var = 3.14
	tester(`'hello ${var} world'.template())
}
