testcase('test of scope') {
	x = '${value}\n'.template()
	try {
		x.render(sys.stdout)
	} catch {|e|
		println('expected error occurs: ', e.text)
	}
	value = 'hoge'
	x.render(sys.stdout)
	scope {
		value = 'hoge-inside'
		x.render(sys.stdout)
		scope {
			value = 'hoge-inside-inside'
			x.render(sys.stdout)
		}
	}
}
