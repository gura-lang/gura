testcase('gear@softmax') {
	gear@softmax {|g|
		tester(`g.axis)
	}
	gear@softmax(3) {|g|
		tester(`g.axis)
	}
	tester(`(array {0.3, 2.9, 4.0} |*| gear@softmax()))
	[
		// axis=0, [*, 0, 0] and [*, 2, 3]
		array@double {1, 2, -4, -3, -4}
		array@double {0, 0, -3, 4, 3}
		// axis=1, [*, *, 0] and [*, *, 3]
		array@double {1, -2, 2}
		array@double {2, -2, 4}
		array@double {1, 1, 0}
		array@double {4, -5, 0}
		array@double {-3, -1, 2}
		array@double {0, -2, -1}
		array@double {3, -3, -3}
		array@double {3, -1, 4}
		// axis=2, [*, *, 0] and [*, *, 3]
		array@double {1, 2, 1, 4}
		array@double {-2, -2, 1, -5}
		array@double {2, 4, 0, 0}
		array@double {-3,  0,  3,  3},
		array@double {-1, -2, -3, -1},
		array@double { 2, -1, -3,  4}
	].each {|x|
		ans1 = x |*| gear@softmax()
		ans2 = math.exp(x) / math.exp(x).sum()
		println(x, ' .. ', ans1, ' ', ans2)
	}
	x = array@double {
		{
			{ 1,  2,  1,  4},
			{-2, -2,  1, -5},
			{ 2,  4,  0,  0}
		}, {
			{ 2,  0,  1,  0},
			{ 3,  2,  3, -3},
			{ 4, -2,  3,  0}
		}, {
			{-4,  3, -3,  3},
			{ 0, -1,  3,  1},
			{-2, -5, -2, -3}
		}, {
			{-3,  0,  3,  3},
			{-1, -2, -3, -1},
			{ 2, -1, -3,  4}
		}, {
			{-4, -3,  3,  1},
			{ 1,  2, -1,  4},
			{ 0, -3,  1,  3}
		}
	}
	println(x)
	tester(`(x |*| gear@softmax(0)))
	tester(`(x |*| gear@softmax(1)))
	tester(`(x |*| gear@softmax(2)))
	tester(`(x |*| gear@softmax()))
}
