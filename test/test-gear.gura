	tester(`g.size, `g.strides, `g.padding, `g.channel_pos, `g.channel_num, `g.filter_num)
}

tester_gear@maxpool_properties(g) = {
	tester(`g.size, `g.strides, `g.padding, `g.channel_pos)
}

