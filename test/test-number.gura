#!/usr/bin/env gura
import(helper.test) {*}

testcase('number.min@T, number.max@T') {
	printf('min@int8 .. %d\n',		number.min@int8)
	printf('max@int8 .. %d\n',		number.max@int8)
	printf('min@uint8 .. %d\n',		number.min@uint8)
	printf('max@uint8 .. %d\n',		number.max@uint8)
	printf('min@int16 .. %d\n',		number.min@int16)
	printf('max@int16 .. %d\n',		number.max@int16)
	printf('min@uint16 .. %d\n',	number.min@uint16)
	printf('max@uint16 .. %d\n',	number.max@uint16)
	printf('min@int32 .. %d\n',		number.min@int32)
	printf('max@int32 .. %d\n',		number.max@int32)
	printf('min@uint32 .. %d\n',	number.min@uint32)
	printf('max@uint32 .. %d\n',	number.max@uint32)
}
testcase('number.size@T') {
	printf('size@int8 .. %d\n',		number.size@int8)
	printf('size@uint8 .. %d\n',	number.size@uint8)
	printf('size@int16 .. %d\n',	number.size@int16)
	printf('size@uint16 .. %d\n',	number.size@uint16)
	printf('size@int32 .. %d\n',	number.size@int32)
	printf('size@uint32 .. %d\n',	number.size@uint32)
	printf('size@int64 .. %d\n',	number.size@int64)
	printf('size@uint64 .. %d\n',	number.size@uint64)
	printf('size@float .. %d\n',	number.size@float)
	printf('size@double .. %d\n',	number.size@double)
}
