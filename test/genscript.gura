#!/usr/bin/env gura
import(argopt)

argopt.Parser {|p|
	p.addFlag('eval', 'e', 'eval generated script')
	try {
		[cfg, argv] = p.parse(sys.argv)
	} catch {|e|
		sys.stderr.println(e.text)
		sys.exit(1)
	}
}
if (argv.len() == 0) {
	sys.stderr.println('usage: genscript.gura [--eval] script')
	sys.exit(1)
}
fileName = argv[0]
if (cfg['eval']) {
	buff = binary()
	expr(fileName).write(buff)
	expr(buff).eval()
} else {
	expr(fileName).write(sys.stdout)
}
