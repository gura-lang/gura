testcase('array.dot()') {
	repeat(2) {|i|
		[`half, `float, `double, `complex].each {|elemtype|
			println('elemtype: ', elemtype)
			a = array(elemtype => elemtype) {1, 5, 9}
			b = array(elemtype => elemtype) {5, 2}
			f = array(elemtype => elemtype) {3, 2, -2}
			if (i == 0) {
				c = array(elemtype => elemtype) {{7, 4, -1}, {3, 0, 5}}
				d = array(elemtype => elemtype) {{5, 2}, {3, 1}, {4, -1}}
				e = array(elemtype => elemtype) {{8, 4, 2}, {1, 3, -6}, {-7, 0, 5}}
				g = array(elemtype => elemtype) {
					{{5, 2, 1}, {3, 1, 2}, {4, -1, 3}}
					{{8, 4, 2}, {1, 3, -6}, {-7, 0, 5}}
				}
			} else {
				// test with arrays of elements ordered in column-major
				c = array(elemtype => elemtype) {{7, 3}, {4, 0}, {-1, 5}}.T
				d = array(elemtype => elemtype) {{5, 3, 4}, {2, 1, -1}}.T
				e = array(elemtype => elemtype) {{8, 1, -7}, {4, 3, 0}, {2, -6, 5}}.T
				g = array(elemtype => elemtype) {
					{{ 5,  3,  4}, { 2,  1, -1}, { 1,  2,  3}},
					{{ 8,  1, -7}, { 4,  3,  0}, { 2, -6,  5}}
				}.T
			}
			tester(`array.dot(a, f))
			tester(`array.dot(a, d))
			tester(`array.dot(a, e))
			tester(`array.dot(b.reshape([2, 1]), a.reshape([1, 3])))
			tester(`array.dot(c, d))
			tester(`array.dot(c, e))
			tester(`array.dot(d, b))
			tester(`array.dot(d, c))
			tester(`array.dot(e, d))
			tester(`(a |.| f))
			tester(`(a |.| d))
			tester(`(a |.| e))
			tester(`(b.reshape([2, 1]) |.| a.reshape([1, 3])))
			tester(`(c |.| d))
			tester(`(c |.| e))
			tester(`(d |.| b))
			tester(`(d |.| c))
			tester(`(e |.| d))
			tester(`(d |.| 3))
			tester(`(3 |.| d))
			tester(`(d |.| 3j))
			tester(`(3j |.| d))
			tester(`(a |.| g))
			tester(`(g |.| a))
		}
	}
}
