#!/usr/bin/env gura
import(helper.test) {*}

funcs = [
	array@char
	array@uchar
	array@short
	array@ushort
	array@int32
	array@uint32
	array@int64
	array@uint64
	array@float
	array@double
]

PrintArray(fmt:string, array) = println(format(fmt, array.each()).join(' '))

testcase('constructor') {
	funcs.each {|func|
		println(func)
		x = func.zeros(30)
		println(x[0..29].join(' '))
		x = func.ones(30)
		println(x[0..29].join(' '))
		x = func([0..29])
		println(x[0..29].join(' '))
		println(x.each().join(' '))
		x.each {|n| printf('%d ', n)}, println()
		x = func(0..29)
		println(x[0..29].join(' '))
	}
}
testcase('cast to list') {
	funcs.each {|func|
		println(func)
		x:list = func([0..29])
		println(x.join(' '))
	}
}
testcase('cast from list') {
	x:array@char = [0..29]
	PrintArray('%2d', x)
	x:array@uchar = [0..29]
	PrintArray('%2d', x)
	x:array@short = [0..29]
	PrintArray('%2d', x)
	x:array@ushort = [0..29]
	PrintArray('%2d', x)
	x:array@int32 = [0..29]
	PrintArray('%2d', x)
	x:array@uint32 = [0..29]
	PrintArray('%2d', x)
	x:array@float = [0..29]
	PrintArray('%2d', x)
	x:array@double = [0..29]
	PrintArray('%2d', x)
}
