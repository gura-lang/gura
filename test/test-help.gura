#!/usr/bin/env gura
import(helper.test) {*}

PrintHelpInfo(f:function) = {
	h = function.gethelp(f)
	printf('"%s", "%s"\n', h.format, h.doc)
}

testcase('simple') {
	f() = {} %% {`ja, 'markdown', ''}
	PrintHelpInfo(f)
	f() = {} %% {`ja, 'markdown', 'doc-body'}
	PrintHelpInfo(f)
	f() = {} %% {`ja, 'markdown', '#hoge-format\ndoc-body'}
	PrintHelpInfo(f)
}

testcase('multi-language') {
	f() = {} %% {`en, 'markdown', 'foo'} %% {`ja, 'markdown', 'hoge'}
	println('`en ..', function.gethelp(f, `en).doc)
	println('`ja ..', function.gethelp(f, `ja).doc)
}
