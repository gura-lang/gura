#!/usr/bin/env gura
import(testutil) {*}

testcase {
	[
		[3, 4]
		[-3, 4]
		[3, -4]
		[-3, -4]
	].each {|test|
		x = fraction(test*)
		printf('%s .. numer=%d denom=%d\n', x, x.numer, x.denom)
	}
	tester(`fraction(3, 12).reduce())
	tester(`fraction(-3, 12).reduce())
}
