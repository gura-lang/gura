#!/usr/bin/env gura
import(markdown)

text = R'''
paragraph

<table>
  <tr><th>column-1</th><th>column-2</th></tr>
  <tr><td>item-1-1</td><td>item-1-2</td></tr>
  <tr><td>item-2-1</td><td>item-2-2</td></tr>
  <tr><td>item-3-1</td><td>item-3-2</td></tr>
  <tr><td>item-4-1</td><td>item-4-2</td></tr>
</table>

<table>
</div>

<br />
<br/>

paragraph
'''

markdown.document {|doc|
	doc << text
	doc.print()
	//doc.output_html()
	//doc.output_rtf()
	//doc.output_console()
	refs = [doc.refs]
	if (!refs.isempty()) {
		println('** reference list **')
		refs:*print()
	}
}
