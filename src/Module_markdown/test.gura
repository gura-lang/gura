#!/usr/bin/env gura
import(markdown)

text = R'''
normal paragraph

> Email-style angle brackets
> are used for blockquotes.

> > And, they can be nested.

> #### Headers in blockquotes
> 
> * You can quote a list.
> * Etc.
>
> paragraph in quote
>
> - list item-1
> - list item-2
>
> 1. list item-1
> 2. list item-2
>
> paragraph in quote

normal paragraph
'''
text = R'''
    hoge hoge

    foo foo

fadsfdsafdsa
'''

markdown.document {|doc|
	doc << text
	//doc.print()
	doc.output_html()
	//doc.output_console()
	refs = [doc.refs]
	if (!refs.isempty()) {
		println('** reference list **')
		refs:*print()
	}
}
