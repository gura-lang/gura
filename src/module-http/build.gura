#!/usr/bin/env gura
import(modbuild)
builder = modbuild.Builder()
if (sys.build == `msc) {
	builder.incDirs.append(path.join(modbuild.guestDir, 'zlib-1.2.7'))
	builder.libs.append(path.join(modbuild.guestDir, 'zlib-1.2.7/zlib.lib'))
} elsif (sys.build == `gnuc) {
	builder.libs.append('z')
	builder.debFiles = ['zlib1g-dev']
	builder.rpmFiles = ['zlib-devel']
}
builder.build('http', ['module-http.cpp'])
