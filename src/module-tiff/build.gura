#!/usr/bin/env gura
import(modbuild)
builder = modbuild.Builder()
if (sys.build == `msc) {
	builder.incDirs.append(path.join(modbuild.guestDir, 'tiff-3.8.2/libtiff'))
	builder.libs.append(path.join(modbuild.guestDir, 'tiff-3.8.2/libtiff/libtiff.lib'))
} elsif (sys.build == `gnuc) {
	builder.libs.append('tiff')
	builder.debFilesDevel = ['libtiff4-dev']
	builder.rpmFilesDevel = ['libtiff-devel']
}
builder.build('tiff', ['module-tiff.cpp'])
