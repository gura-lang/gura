#!/usr/bin/env gura
import(markdown)

write(doc:markdown.document) = {
	doc << '### Module Functions'
	doc << [
		base64.decode
		base64.encode
		base64.reader
		base64.writer
	]
	doc << '### Extension of stream Class'
	doc << [
		stream.reader@base64
		stream.writer@base64
	]
	doc
}

if (__name__ == '__main__') {
	write(markdown.document()).render@html(sys.stdout)
}
