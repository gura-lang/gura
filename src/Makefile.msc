#==============================================================================
# Makefile for Microsoft Visual C++
#==============================================================================
DLL_GURA = ..\bin-x86\libguracore-x86.dll

all: library program module

library:
	@cd lib
	@nmake /nologo /f Makefile.msc
	@cd ..

program: $(DLL_GURA)
	@cd program-gura
	@nmake /nologo /f Makefile.msc
	@cd ..\program-guraw
	@nmake /nologo /f Makefile.msc
	@cd ..\program-guraole
	@nmake /nologo /f Makefile.msc
	@cd ..

module: $(DLL_GURA)
	@..\bin-x86\gura.exe -C ..\build build-modules.gura install

clean: clean-module clean-program clean-library

clean-library:
	@cd lib
	@nmake /nologo /f Makefile.msc clean
	@cd ..

clean-program:
	@cd program-gura
	@nmake /nologo /f Makefile.msc clean
	@cd ..\program-guraw
	@nmake /nologo /f Makefile.msc clean
	@cd ..\program-guraole
	@nmake /nologo /f Makefile.msc clean
	@cd ..

clean-module:
	@if exist ..\bin-x86\gura.exe ..\bin-x86\gura.exe build-modules.gura clean
