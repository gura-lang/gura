#!/usr/bin/env gura
import(modbuild)

builder = modbuild.Builder()
if (sys.build == `msc) {
	// nothing to do
} elsif (sys.build == `gnuc) {
	builder.libs.append('asound')
}
builder.build('midi', ['module-midi.cpp',
	'Port.cpp', 'Event.cpp', 'Player.cpp', 'Track.cpp',
	'MML.cpp', 'Sequence.cpp', 'SoundFont.cpp'])
