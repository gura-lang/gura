#!/usr/bin/env gura
import(console)

txt = chr(0x30 + [0..9].round(64)).join()
for (region in [`up, `down]) {
	console.clear()
	printf('%s %d\n', txt, 0..19)
	[x, y] = [0, 5]
	console.moveto(x, y)
	print('#')
	console.moveto(x, y)
	sys.stdin.readline()
	console.moveto(x, y)
	console.clear(region)
	sys.stdin.readline()
}
for (region in [`left, `right]) {
	console.clear()
	printf('%s %d\n', txt, 0..19)
	[x, y] = [20, 5]
	console.moveto(x, y)
	print('#')
	console.moveto(x, y)
	sys.stdin.readline()
	console.moveto(x, y)
	console.clear(region)
	sys.stdin.readline()
}
