#!/usr/bin/env gura
import(modbuild)
builder = modbuild.Builder()
srcs = ['Module_sqlite3.cpp']
if (sys.build == `msc) {
	builder.incDirs.append(path.join(modbuild.guestDir, 'sqlite-amalgamation-3071000'))
	srcs.add(path.join('..', '..', 'guest', 'sqlite-amalgamation-3071000', 'sqlite3.c'))
} elsif (sys.build == `gnuc) {
	builder.libs.append('sqlite3')
	builder.debFiles = ['libsqlite3-dev']
	builder.rpmFiles = ['sqlite-devel']
}
builder.build('sqlite3', srcs)
