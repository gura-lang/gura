#!/usr/bin/env gura

audio(`u16le, 1, 1000) {|aud|
	aud.sinewave(0, 12, .02)
	println(aud)
	printf('%s\n', aud.each(0).join(','))
	aud.sinewave(0, 12, .03)
	println(aud)
	printf('%s\n', aud.each(0).join(','))
	aud.sinewave(0, 12, .04)
	println(aud)
	printf('%s\n', aud.each(0).join(','))
	aud.store(0, 0, 0..89)
	printf('%s\n', aud.each(0).join(','))
	try {
		aud.store(0, 0, 0..100)
	} catch {|e|
		println('expected error occurs: ', e.text)
	}
}
